repeat task.wait() until game:IsLoaded()

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer
local map = workspace:WaitForChild("MAP")

-- Flags
local collectingCoins = false
local collectingDummy = false

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "GhoulzHubCoins"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0, 280, 0, 210)
main.Position = UDim2.new(0.5, -140, 0.5, -105)
main.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
main.BorderColor3 = Color3.fromRGB(255, 0, 0)
main.Active = true

local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1, 0, 0, 35)
title.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
title.Text = "Ghoulz Hub"
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.new(1, 1, 1)

-- Boutons
local toggleCoinsBtn = Instance.new("TextButton", main)
toggleCoinsBtn.Size = UDim2.new(0, 200, 0, 40)
toggleCoinsBtn.Position = UDim2.new(0.5, -100, 0, 50)
toggleCoinsBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
toggleCoinsBtn.Text = "Auto Coins: OFF"
toggleCoinsBtn.TextColor3 = Color3.new(1, 1, 1)
toggleCoinsBtn.Font = Enum.Font.GothamBold
toggleCoinsBtn.TextScaled = true

local toggleDummyBtn = Instance.new("TextButton", main)
toggleDummyBtn.Size = UDim2.new(0, 200, 0, 40)
toggleDummyBtn.Position = UDim2.new(0.5, -100, 0, 100)
toggleDummyBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
toggleDummyBtn.Text = "Auto Dummy: OFF"
toggleDummyBtn.TextColor3 = Color3.new(1, 1, 1)
toggleDummyBtn.Font = Enum.Font.GothamBold
toggleDummyBtn.TextScaled = true

local closeBtn = Instance.new("TextButton", main)
closeBtn.Size = UDim2.new(0, 200, 0, 35)
closeBtn.Position = UDim2.new(0.5, -100, 0, 155)
closeBtn.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
closeBtn.Text = "Fermer"
closeBtn.TextColor3 = Color3.new(1, 1, 1)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextScaled = true

-- Draggable
local dragging = false
local dragStart, startPos
main.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = main.Position
	end
end)
main.InputChanged:Connect(function(input)
	if dragging and (input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseMovement) then
		local delta = input.Position - dragStart
		main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)
main.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = false
	end
end)

-- Auto Coins rapide
local function collectCoins()
	local coinEvent = ReplicatedStorage:WaitForChild("Events"):WaitForChild("CoinEvent")
	while collectingCoins do
		if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
			pcall(function()
				coinEvent:FireServer()
			end)
		end
		task.wait(0.2) -- plus rapide que 1s
	end
end

-- Auto Dummy optimisé
local function collectDummy()
	local folders = {
		map:WaitForChild("5k_dummies"),
		map:WaitForChild("dummies")
	}
	local dummyEventRef = ReplicatedStorage:WaitForChild("jdskhfsIIIllliiIIIdchgdIiIIIlIlIli")
	while collectingDummy do
		if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
			local hrp = player.Character.HumanoidRootPart
			-- Prendre un dummy aléatoire dans les deux dossiers
			for _, folder in ipairs(folders) do
				local dummies = folder:GetChildren()
				if #dummies > 0 then
					local dummy = dummies[math.random(1, #dummies)]
					local humanoid = dummy:FindFirstChild("Humanoid")
					if humanoid then
						local args = {humanoid, math.huge}
						pcall(function()
							dummyEventRef:FireServer(unpack(args))
						end)
					end
				end
			end
			-- TP aléatoire sur 5k_dummies
			local folder5k = map:WaitForChild("5k_dummies")
			local dummies5k = folder5k:GetChildren()
			if #dummies5k > 0 then
				local dummyTP = dummies5k[math.random(1, #dummies5k)]
				if dummyTP:FindFirstChild("HumanoidRootPart") then
					hrp.CFrame = dummyTP.HumanoidRootPart.CFrame + Vector3.new(0,3,0)
				end
			end
		end
		task.wait(0.1) -- boucle rapide
	end
end

-- Boutons ON/OFF
toggleCoinsBtn.MouseButton1Click:Connect(function()
	collectingCoins = not collectingCoins
	if collectingCoins then
		toggleCoinsBtn.Text = "Auto Coins: ON"
		toggleCoinsBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
		task.spawn(collectCoins)
	else
		toggleCoinsBtn.Text = "Auto Coins: OFF"
		toggleCoinsBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	end
end)

toggleDummyBtn.MouseButton1Click:Connect(function()
	collectingDummy = not collectingDummy
	if collectingDummy then
		toggleDummyBtn.Text = "Auto Dummy: ON"
		toggleDummyBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
		task.spawn(collectDummy)
	else
		toggleDummyBtn.Text = "Auto Dummy: OFF"
		toggleDummyBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	end
end)

-- Fermer
closeBtn.MouseButton1Click:Connect(function()
	collectingCoins = false
	collectingDummy = false
	gui:Destroy()
end)
